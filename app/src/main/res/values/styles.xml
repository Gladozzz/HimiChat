<resources>

    <!-- Base application theme. -->
    <style name="NightTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primary">@color/colorPrimary</item>
        <item name="primaryLight">@color/colorPrimaryLight</item>
        <item name="primaryBackground">@color/colorBackground</item>
        <item name="primaryBackgroundBrighter">@color/colorBackgroundBrighter</item>
        <item name="accent">@color/colorAccent</item>
        <item name="primaryTextColor">@color/white</item>
        <item name="сloudSent">@drawable/sent_message_cloud</item>
        <item name="сloudReceived">@drawable/received_message_cloud</item>
        <item name="dateViewShape">@drawable/date_view_shape</item>
        <item name="secondaryTextColor">@color/dialog_date_text</item>
<!--        <item name="сloudSent">@color/colorCloudSent</item>-->
<!--        <item name="сloudReceived">@color/colorCloudReceived</item>-->
    </style>
    <style name="DayTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="colorPrimaryDark">@color/colorBackgroundDay</item>
        <item name="colorAccent">@color/colorAccentDay</item>
        <item name="primary">@color/colorPrimaryDay</item>
        <item name="primaryLight">@color/colorPrimaryLightDay</item>
        <item name="primaryBackground">@color/colorBackgroundDay</item>
        <item name="primaryBackgroundBrighter">@color/colorPrimaryDarkBrighterDay</item>
        <item name="accent">@color/colorAccentDay</item>
        <item name="primaryTextColor">#212121</item>
        <item name="сloudSent">@drawable/sent_message_cloud_day</item>
        <item name="сloudReceived">@drawable/received_message_cloud_day</item>
        <item name="dateViewShape">@drawable/date_view_shape_day</item>
        <item name="secondaryTextColor">@color/dark_gray</item>
<!--        <item name="сloudSent">@color/colorCloudSentDay</item>-->
<!--        <item name="сloudReceived">@color/colorCloudReceivedDay</item>-->
    </style>
    <style name="primaryTextAppearance">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="android:ems">10</item>
    </style>
    <style name="counterText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="NightTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="primaryInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_margin">8dp</item>
        <item name="boxBackgroundColor">@color/colorBackgroundBrighter</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/primaryTextColor</item>
        <item name="passwordToggleTint">?attr/primaryTextColor</item>
    </style>

    <style name="primaryTextEditStyle">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorHighlight">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/primaryTextColor</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
        <item name="android:backgroundTint">?attr/primaryTextColor</item>
        <item name="android:drawableTint">?attr/primary</item>
        <item name="android:foregroundTint">?attr/primary</item>
    </style>

    <style name="primaryAvatarStyle">
        <item name="shadow_color">@color/colorBackground</item>
        <item name="shadow_width">10dp</item>
        <item name="border_color">@color/colorPrimary</item>
        <item name="border_width">10dp</item>
        <item name="android:src">@drawable/defaultavatar</item>
    </style>

    <style name="smallAvatarStyle">
        <item name="shadow_color">@color/colorBackground</item>
        <item name="shadow_width">4dp</item>
        <item name="border_color">@color/colorPrimary</item>
        <item name="border_width">4dp</item>
        <item name="android:src">@drawable/defaultavatar</item>
    </style>

    <style name="toolbarAvatarStyle">
        <item name="shadow_color">@color/colorBackground</item>
        <item name="shadow_width">1dp</item>
        <item name="border_color">@color/colorPrimary</item>
        <item name="border_width">1dp</item>
        <item name="android:src">@drawable/defaultavatar</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

</resources>
