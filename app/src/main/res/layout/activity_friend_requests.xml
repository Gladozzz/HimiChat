<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FriendRequestsActivity" android:background="@color/colorPrimaryDark">
    <ImageButton
            android:layout_width="140dp"
            android:layout_height="80dp" app:srcCompat="@drawable/friends"
            android:id="@+id/friendsButton" android:padding="0dp"
            android:scaleType="centerInside" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dialoguesButton" android:backgroundTint="@color/colorPrimaryDark"/>
    <ImageButton
            android:layout_width="140dp"
            android:layout_height="80dp" app:srcCompat="@drawable/dialogues"
            android:id="@+id/dialoguesButton"
            android:padding="0dp" android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/colorPrimaryDark"/>
    <ImageButton
            android:layout_width="140dp"
            android:layout_height="80dp" app:srcCompat="@drawable/settings"
            android:id="@+id/settingsButton"
            android:scaleType="centerInside" android:padding="0dp"
            app:layout_constraintStart_toEndOf="@+id/dialoguesButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:backgroundTint="@color/colorPrimaryDark"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friendRequests"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="visible"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/reсeivedButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.363"
            tools:listitem="@layout/received_requests_list" />

    <Button
            android:id="@+id/reсeivedButton"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/button_received"
            app:layout_constraintBottom_toTopOf="@+id/friendsButton"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/sentButton"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/button_sent"
            app:layout_constraintBottom_toTopOf="@+id/settingsButton"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>