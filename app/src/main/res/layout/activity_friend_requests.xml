<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FriendRequestsActivity" android:background="@color/colorPrimaryDark">

    <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/dialoguesButton"
            app:srcCompat="@drawable/ic_nav_settings" />

    <ImageButton
            android:id="@+id/dialoguesButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/settingsButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/friendsButton"
            app:srcCompat="@drawable/ic_nav_dialogs" />

    <ImageButton
            android:id="@+id/friendsButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dialoguesButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_nav_friends" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friendRequests"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="visible"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/reсeivedButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.363"
            tools:listitem="@layout/received_requests_list" />

    <Button
            android:id="@+id/reсeivedButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:text="@string/button_received"
            app:layout_constraintBottom_toTopOf="@+id/friendsButton"
            app:layout_constraintEnd_toStartOf="@+id/sentButton"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/sentButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:text="@string/button_sent"
            app:layout_constraintBottom_toTopOf="@+id/settingsButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reсeivedButton" />

</androidx.constraintlayout.widget.ConstraintLayout>