<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        tools:context=".SettingsActivity">

    <ImageButton
            android:id="@+id/friendsButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dialoguesButton"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/friends" />

    <ImageButton
            android:id="@+id/dialoguesButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/settingsButton"
            app:layout_constraintStart_toEndOf="@+id/friendsButton"
            app:srcCompat="@drawable/dialogues" />

    <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dialoguesButton"
            app:srcCompat="@drawable/settings" />

    <Button
            android:id="@+id/logoutButton"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:text="@string/button_logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loadRenameButton" />

    <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:text="@string/label_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarView" />

    <TextView
            android:id="@+id/nicknameText"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nickname"
            app:layout_constraintTop_toBottomOf="@+id/avatarView" />

    <Button
            android:id="@+id/loadAvatarButton"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:text="@string/button_load_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/realNameView" />

    <ImageView
            android:id="@+id/avatarView"
            android:layout_width="351dp"
            android:layout_height="185dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/defaultavatar" />

    <TextView
            android:id="@+id/rename"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:text="@string/label_rename"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nickname" />

    <TextView
            android:id="@+id/realNameView"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rename"
            app:layout_constraintTop_toBottomOf="@+id/nicknameText" />

    <Button
            android:id="@+id/loadRenameButton"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:text="@string/loadRenameButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loadAvatarButton" />

</androidx.constraintlayout.widget.ConstraintLayout>