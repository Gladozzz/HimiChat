<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="100">

    <ImageView
            android:id="@+id/profileAvatarView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="50"
            app:srcCompat="@drawable/defaultavatar" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="100">

        <EditText
                android:id="@+id/nicknameEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="90"
                android:inputType="textPersonName"
                android:text="Nickname" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="100">

        <EditText
                android:id="@+id/realnameEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="90"
                android:gravity="fill_horizontal"
                android:inputType="textPersonName"
                android:text="Realname" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center|center_vertical"
            android:orientation="horizontal"
            android:weightSum="100">


        <Button
                android:id="@+id/profileRemoveFriendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:background="@color/colorPrimary"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/button_remove_friend" />

        <Button
                android:id="@+id/profileSendMessageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:background="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:text="@string/button_send_message" />
    </LinearLayout>

</LinearLayout>