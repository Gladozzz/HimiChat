<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DialoguesActivity" android:background="@color/colorPrimaryDark">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/dialog_list"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/dialoguesList" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/dialoguesButton"
            android:layout_marginBottom="8dp"/>
    <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/dialoguesButton"
            app:srcCompat="@drawable/ic_nav_settings" />

    <ImageButton
            android:id="@+id/dialoguesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/settingsButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/friendsButton"
            app:srcCompat="@drawable/ic_nav_dialogs" />

    <ImageButton
            android:id="@+id/friendsButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dialoguesButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_nav_friends" />
</androidx.constraintlayout.widget.ConstraintLayout>