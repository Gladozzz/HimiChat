<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FriendsActivity" android:background="@color/colorPrimaryDark">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="393dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/friends_list"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/FriendsList"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/findFriendButton"
            android:layout_marginTop="8dp"/>
    <ImageButton
            android:layout_width="140dp"
            android:layout_height="80dp" app:srcCompat="@drawable/friends"
            android:id="@+id/friendsButton" android:padding="0dp"
            android:scaleType="centerInside" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dialoguesButton" android:backgroundTint="@color/colorPrimaryDark"/>
    <ImageButton
            android:layout_width="140dp"
            android:layout_height="80dp" app:srcCompat="@drawable/dialogues"
            android:id="@+id/dialoguesButton"
            android:padding="0dp" android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/colorPrimaryDark"/>
    <ImageButton
            android:layout_width="140dp"
            android:layout_height="80dp" app:srcCompat="@drawable/settings"
            android:id="@+id/settingsButton"
            android:scaleType="centerInside" android:padding="0dp"
            app:layout_constraintStart_toEndOf="@+id/dialoguesButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:backgroundTint="@color/colorPrimaryDark"/>

    <Button
            android:id="@+id/findFriendButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/button_find_friend"
            app:layout_constraintBottom_toTopOf="@+id/friendsButton"
            app:layout_constraintEnd_toStartOf="@+id/friendRequestsButton"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/friendRequestsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/button_friend_requests"
            app:layout_constraintBottom_toTopOf="@+id/dialoguesButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/findFriendButton" />

</androidx.constraintlayout.widget.ConstraintLayout>